@page "/"
@inject IStudentService StudentService
@inject IDepartmentService DepartmentService
<PageTitle>Index</PageTitle>
<style>
    .app1{
        align-items: center;
        background-image: linear-gradient(180deg, rgb(5, 39, 103) 0%, #3a0647 70%);
        color:White;
        border-radius: 4%;
        border-color: rgb(71, 49, 214);
        text-align: center;
        font-weight: bold;
        width: 32%;
        padding: 3% 1.5% 1.5% 3%;
        margin: 12% 3% 3% 3%; 
        margin-left: 10%;
        
        padding-top: 4.7%;
        padding-bottom: 4%;
    }
    .app2{
        align-items: center;
        background-image: linear-gradient(180deg, rgb(5, 39, 103) 0%, #3a0647 70%);
        color:White;
        border-radius: 4%;
        border-color: rgb(71, 49, 214);
        text-align: center;
        font-weight: bold;
        height: 10%;
        width:30%;
        padding: 3% 3% 3% 3%;
        margin: 3% 3% 3% 3%; 
        margin-left: 50%;
        margin-top: -18.3%;
    }
</style>
<h3>Welcome</h3>

<div class="app1">
    <p>Student Count:<p>@StudentService.students.Count()</p>
    @* style="color:white;background-color: rgb(88, 88, 221); width:10%; text-align:center; " *@
    </p>
</div>
<div class="app2">
    <br>
    <p>Department Count:<p>@DepartmentService.departments.Count() </p></p>
</div>


@code{
   
    protected override async Task OnInitializedAsync()
    {
        await StudentService.GetStudents();
        await DepartmentService.GetDepartments();
    }
}
